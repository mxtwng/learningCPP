{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build all files",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",                
                
                "searchingAlgorithms/sortedSearch.cpp",  
                "searchingAlgorithms/unsortedSearch.cpp",  

                "sortingAlgorithms/basicSorting.cpp",
                "sortingAlgorithms/advancedSorting.cpp",

                "Graph/traversal/traversal.cpp",

                "Graph/shortestPath/weighted.cpp",
                "Graph/shortestPath/unweighted.cpp",
                "Graph/shortestPath/allPairs.cpp",
                "-o",
                "${fileDirname}/main" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
