{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build main project",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-O2",
                "-march=native",
                "-pipe",
                "-DNDEBUG",
                
                "main.cpp",
                "searchingAlgorithms/sortedSearch.cpp",  
                "searchingAlgorithms/unsortedSearch.cpp",  
                "sortingAlgorithms/basicSorting.cpp",
                "sortingAlgorithms/advancedSorting.cpp",
                "Graph/traversal/traversal.cpp",
                "Graph/shortestPath/shortestPath.cpp",
                "Graph/shortestPath/allPairs.cpp",
                "Graph/MST/dsu.cpp",
                "Graph/MST/mst.cpp",
                
                "-o",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Fast build of main project"
        },
        {
            "type": "shell",
            "label": "Build and Run Main",
            "command": "bash",
            "args": [
                "-c",
                "g++ -std=c++17 -O2 -march=native -pipe -DNDEBUG main.cpp searchingAlgorithms/sortedSearch.cpp searchingAlgorithms/unsortedSearch.cpp sortingAlgorithms/basicSorting.cpp sortingAlgorithms/advancedSorting.cpp Graph/traversal/traversal.cpp Graph/shortestPath/shortestPath.cpp Graph/shortestPath/allPairs.cpp Graph/MST/dsu.cpp Graph/MST/mst.cpp -o main && ./main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "detail": "Build and run main project",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": true
            }
        }
    ]
}